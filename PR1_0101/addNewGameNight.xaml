<Window x:Class="PR1_0101.addNewGameNight"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR1_0101"
        mc:Ignorable="d"
        Title="addNewGameNight" Height="500" Width="400" FontFamily="Bahnschrift">
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image Source="Images/Логотип.png" Grid.ColumnSpan="3"/>
            <TextBlock Grid.Row="1" Text="Добавление новой игротеки" 
                   Grid.Column="0" Grid.ColumnSpan="3"  
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="23"/>
        </Grid>

        <Grid Grid.Row="1" Width="350">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Время начала:" FontSize="19" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" Margin="0,5"/>
            <DatePicker x:Name="DPStartTime" FontSize="17" Grid.Column="1" Grid.Row="0" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1">
                <TextBox x:Name="TBhour"  VerticalAlignment="Center" Width="30" TextChanged="TBhour_TextChanged"/>
                <TextBlock Text="ч." VerticalAlignment="Center"/>
                <TextBox x:Name="TBmin"  VerticalAlignment="Center" Width="30" TextChanged="TBmin_TextChanged"/>
                <TextBlock Text="м." VerticalAlignment="Center"/>
            </StackPanel>


            <TextBlock Text="Ответственный:" FontSize="19" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2" Margin="0,5"/>
            <ComboBox x:Name="CBresponsible" FontSize="19" Height="30" Grid.Column="1" Grid.Row="2" Margin="0,5"/>

            <TextBlock Text="Мин. участников:" FontSize="19" VerticalAlignment="Center" Grid.Column="0" Grid.Row="3" Margin="0,5"/>
            <TextBox x:Name="TBMinParticipants" FontSize="19" Height="30" Grid.Column="1" Grid.Row="3" Margin="0,5" InputScope="Number" TextChanged="TBMinParticipants_TextChanged"/>

            <TextBlock Text="Макс. участников:" FontSize="19" VerticalAlignment="Center" Grid.Column="0" Grid.Row="4" Margin="0,5"/>
            <TextBox x:Name="TBMaxParticipants" FontSize="19" Height="30" Grid.Column="1" Grid.Row="4" Margin="0,5" InputScope="Number" TextChanged="TBMaxParticipants_TextChanged"/>

            <TextBlock Text="Игры:" FontSize="19" VerticalAlignment="Center" Grid.Column="0" Grid.Row="5" Margin="0,5"/>
            <ListBox x:Name="LBGames" Grid.Column="1" Grid.Row="5" Height="120" Margin="0,5" SelectionMode="Multiple">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding NameGame}" FontSize="17"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>


            <!-- Кнопка -->
            <Button x:Name="BTNaddNewGameNight" Content="Добавить" FontSize="17" 
                Width="150" Height="40" Background="#FFB6F63E" 
                Grid.ColumnSpan="2" Grid.Row="6" Margin="0,10" Click="BTNaddNewGameNight_Click"/>
        </Grid>
    </Grid>
</Window>
