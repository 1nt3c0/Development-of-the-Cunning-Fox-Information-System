<Window x:Class="PR1_0101.RegGameNightPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR1_0101"
        mc:Ignorable="d"
        Title="RegGameNightPlayer" Height="150" Width="300" FontFamily="Bahnschrift">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Укажите возраст:" VerticalAlignment="Center"/>
            <DatePicker VerticalAlignment="Center" Name="DPborn" Margin="10,0" Width="160"/>
        </StackPanel>
        <Button Content="Зарегистрироваться" Height="30" Width="150" VerticalAlignment="Bottom" Margin="0,0,0,10" Background="#FFB6F63E" Click="Button_Click"/>
    </Grid>
</Window>
