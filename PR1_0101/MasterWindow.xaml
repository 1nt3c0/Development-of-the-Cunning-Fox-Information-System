<local:ConfirmCloseWindow x:Class="PR1_0101.MasterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR1_0101"
        mc:Ignorable="d"
        Title="MasterWindow" Height="590" Width="800" FontFamily="Bahnschrift">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Здравствуйте, " Margin="10,10" x:Name="TBnameMaster"/>
            <TextBlock Text="Роль: " Grid.Row="1" Margin="10,10" x:Name="TBroleMaster"/>

            <Image Source="Images/Логотип.png" Grid.Column="1" Grid.RowSpan="2"/>
        </Grid>
        <Grid Grid.Row="1">
            <TabControl>
                <TabItem Header="Список настольных игр" Height="35" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="500"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <ListBox x:Name="LBallGame" Grid.Row="0" Grid.Column="0" Grid.RowSpan="7" SelectionChanged="LBallGame_SelectionChanged" >
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderThickness="1" Width="Auto" BorderBrush="Black">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <Image x:Name="Igame" Width="200" Height="150" Grid.Column="0" Grid.Row="0" Source="{Binding Photo}"/>
                                            <TextBlock x:Name="TBnameGame" Grid.Column="0" Grid.Row="1" Text="{Binding StringFormat = 'Название: {0}', Path = NameGame}" Margin="5,5,5,5"/>
                                            <TextBlock x:Name="TBcategory" Grid.Column="0" Grid.Row="2" Text="{Binding StringFormat = 'Категория: {0}', Path = Category1.Name}" Margin="5,5,5,5"/>
                                            <TextBlock x:Name="TBgenre" Grid.Column="0" Grid.Row="3" Text="{Binding StringFormat = 'Жанр: {0}', Path = Genre1.Name }" Margin="5,5,5,5"/>
                                            <TextBlock x:Name="TBthematics"  FontSize="12" Grid.Column="0" Grid.Row="4" Text="{Binding StringFormat = 'Тематика: {0}', Path = Thematics1.Name}" Margin="5,5,5,5"/>
                                            <TextBlock x:Name="TBageLimit" Grid.Column="0" Grid.Row="5" Text="{Binding StringFormat = 'Возрастное ограничение: {0}', Path = AgeLimit}" Margin="5,5,5,5"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>


                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Grid.Row="0" Grid.Column="1" Width="260" Grid.RowSpan="2" Margin="5,0">
                            <Border BorderThickness="0.4" BorderBrush="Black" Width="260">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Описание: " FontSize="18" Margin="5,0"/>
                                    <TextBlock x:Name="TBdescription" Text="..." Margin="5,0" FontWeight="Light" FontSize="14" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Grid.RowSpan="5" Margin="5,20,0,0">
                            <Border BorderBrush="Black" BorderThickness="0.4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="40"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Фильрация: " Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" FontSize="18" VerticalAlignment="Bottom" Margin="5,0"/>

                                    <TextBlock Text="Категория: " Grid.Column="0" Grid.Row="1" FontSize="14" VerticalAlignment="Center" Margin="5,0"/>
                                    <ComboBox x:Name="CBcategory" Grid.Column="1" Grid.Row="1" Width="150" Height="25" VerticalAlignment="Center" Margin="5,0" SelectionChanged="Filter_Changed"/>

                                    <TextBlock Text="Жанр: " Grid.Column="0" Grid.Row="2" FontSize="14" VerticalAlignment="Center" Margin="5,0"/>
                                    <ComboBox x:Name="CBgenre" Grid.Column="1" Grid.Row="2" Width="150" Height="25" VerticalAlignment="Center" Margin="5,0" SelectionChanged="Filter_Changed"/>

                                    <TextBlock Text="Тематика: " Grid.Column="0" Grid.Row="3" FontSize="14" VerticalAlignment="Center" Margin="5,0"/>
                                    <ComboBox x:Name="CBthematics" Grid.Column="1" Grid.Row="3" Width="150" Height="25" VerticalAlignment="Center" Margin="5,0" SelectionChanged="Filter_Changed"/>

                                    <TextBlock Text="Возрастное ограничение: " TextWrapping="Wrap" Grid.Column="0" Grid.Row="4" FontSize="14" VerticalAlignment="Center" Margin="5,0"/>
                                    <ComboBox x:Name="CBageLimit" Grid.Column="1" Grid.Row="4" Width="150" Height="25" VerticalAlignment="Center" Margin="5,0" SelectionChanged="Filter_Changed"/>

                                    <Button x:Name="BTNcancleFilter" Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" Background="#FFFF4540" Width="120" Content="Сбросить фильтры" Foreground="White" Click="BTNcancleFilter_Click" Margin="0,5,0,0"/>
                                    <Button x:Name="BTNaddNewGame" Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="2" Background="#FFB6F63E" Width="130" Content="Добавить новую игру" Margin="0,5,0,0" Click="BTNaddNewGame_Click"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <TabItem Header="Список игротек">
                    <ListBox x:Name="LBgameNight" Grid.Row="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="0.4" BorderBrush="Black" Width="500">
                                    <Grid Margin="15,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Path = ID,StringFormat = '№{0}'}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Path = StartTime , StringFormat = 'Начало: {0}'}" />
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding Path = GamesDisplay ,StringFormat = 'Игры: {0}'}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>

                <TabItem Header="Расписание турниров">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ListBox x:Name="LBtournaments" Grid.Row="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderThickness="0.4" BorderBrush="Black" Width="500">
                                        <Grid Margin="15,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Path = ID,StringFormat = '№{0}'}"/>
                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Path = TimeDate , StringFormat = 'Начало: {0}'}" />
                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding Path = AgeLimit ,StringFormat = 'Возростное ограничение: {0}+'}"/>
                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="{Binding Path = BoardGames1 ,StringFormat = 'Игра: {0}'}"/>
                                            <TextBlock Grid.Row="4" Grid.Column="0" Text="{Binding Path = Price ,StringFormat = 'Цена вступления: {0}'}"/>
                                            <TextBlock Grid.Row="5" Grid.Column="0" Text="{Binding Path = Users ,StringFormat = 'Ответственный: {0}'}"/>

                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0">
                            <Button  x:Name="BTNaddNewTournaments" Background="#FFB6F63E"  Content="Добавить турнир" Height="30" Width="150" Margin="10,10" HorizontalAlignment="Left" Click="BTNaddNewTournaments_Click" />
                            <Button  x:Name="BTNeditTournaments" Background="#FFDB9E3F"  Content="Редактировать турнир" Height="30" Width="150" Margin="10,10" HorizontalAlignment="Left" Foreground="Black" Click="BTNeditTournaments_Click" />
                            <Button  x:Name="BTNdelTournaments" Background="#FFFF4540"  Content="Удалить турнир" Height="30" Width="150" Margin="10,10" HorizontalAlignment="Left" Foreground="White" Click="BTNdelTournaments_Click" />
                        </StackPanel>
                       

                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</local:ConfirmCloseWindow>
