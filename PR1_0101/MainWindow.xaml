<local:ConfirmCloseWindow x:Class="PR1_0101.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR1_0101"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="320" Width="400" FontFamily="Bahnschrift">
    <Grid>
        <StackPanel>
            <TabControl Height="310">
                <TabItem Header="Авторизация" >
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,0">
                        <Image Source="Images/Логотип.png" Width="400" Margin="0,10,0,30" HorizontalAlignment="Center"/>
                        <Grid Width="240">
                            <TextBlock Text="Логин: " FontSize="16" Margin="0,0,20,0" Foreground="#FFFF7673"/>
                            <TextBox x:Name="TBlogin" Text="ivan123" FontSize="16" Width="150" BorderBrush="#FF34BDCD" HorizontalAlignment="Right" BorderThickness="0,0,0,1"/>
                        </Grid>
                        <Grid Width="240" Margin="0,10,0,0">
                            <TextBlock Text="Пароль: " FontSize="16" Margin="0,0,20,0" Foreground="#FFFF7673"/>
                            <TextBox x:Name="TBpassword" Text="password123" FontSize="16" Width="150" BorderBrush="#FF34BDCD" HorizontalAlignment="Right" BorderThickness="0,0,0,1"/>
                        </Grid>
                        <StackPanel>
                            <Button x:Name="BTNinsert" Content="Войти" FontSize="16" Margin="0,35,0,0" Background="#FFB6F63E" Height="35" Width="200" Click="BTNinsert_Click" />
                        </StackPanel>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</local:ConfirmCloseWindow>
