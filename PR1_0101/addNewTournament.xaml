<Window x:Class="PR1_0101.addNewTournament"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR1_0101"
        mc:Ignorable="d"
        Title="addNewTournament" Height="420" Width="400" FontFamily="Bahnschrift">
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image Source="Images/Логотип.png"  Grid.ColumnSpan="3"/>
            <TextBlock Grid.Row="1" Text="Добавление турнира" Grid.Column="0" Grid.ColumnSpan="3"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="23"/>
        </Grid>

        <Grid Grid.Row="1" Grid.RowSpan="3" Width="300" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Игра: " FontSize="19" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0"/>
            <ComboBox x:Name="CBnameGame" FontSize="19" Height="30" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" Margin="0,5"/>

            <TextBlock Text="Время начала: " FontSize="19" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1"/>
            <DatePicker x:Name="DPdate" FontSize="19" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2">
                <TextBox x:Name="TBhour"  VerticalAlignment="Center" Width="30" TextChanged="TBhour_TextChanged"/>
                <TextBlock Text="ч." VerticalAlignment="Center"/>
                <TextBox x:Name="TBmin"  VerticalAlignment="Center" Width="30" TextChanged="TBmin_TextChanged"/>
                <TextBlock Text="м." VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock Text="Возрастное ограничение: " FontSize="19" VerticalAlignment="Center" Grid.Column="0" Grid.Row="3" TextWrapping="Wrap"/>
            <ComboBox x:Name="CBageLimit" FontSize="19" VerticalAlignment="Center" Height="30" Grid.Column="1" Grid.Row="3" Margin="0,5">
                <ComboBoxItem Content="12"/>
                <ComboBoxItem Content="18"/>
            </ComboBox>

            <TextBlock Text="Цена: " FontSize="19" VerticalAlignment="Center" Grid.Column="0" Grid.Row="4"/>
            <TextBox x:Name="TBcost" FontSize="19" VerticalAlignment="Center" Height="30" Grid.Column="1" Grid.Row="4" Margin="0,5" TextChanged="TBcost_TextChanged"/>

            <TextBlock Text="Ответственный: " FontSize="19" VerticalAlignment="Center" Grid.Column="0" Grid.Row="5"/>
            <ComboBox x:Name="CBresponsible" FontSize="19" VerticalAlignment="Center" Height="30" Grid.Column="1" Grid.Row="5" Margin="0,5"/>



            <Button x:Name="BTNaddNewGame"  Width="150" Grid.ColumnSpan="2" Grid.Row="9" Height="40" Background="#FFB6F63E" Content="Добавить" FontSize="17" Margin="0,5,0,5" Click="BTNaddNewGame_Click" />
        </Grid>
    </Grid>
</Window>
